<div class="form-container" >
<%=form_with(model: signup, url: signup_path ) do |form| %>
  <div class="form-row col-6">
    <% if signup.errors.any? then%>
        <div class="alert alert-danger col-6">
            <h2><%= pluralize(signup.errors.count, "error(s)") %> prohibited this book from being saved:</h2>
            <ul>
            <% signup.errors.full_messages.each do |message| %>
                <li><%= message %></li>
             <% end %>
            </ul>
        </div>
    <%end%>

    <div class="col-12 form-group">
        <%= form.label :email, :class=>'form-control'%>
        <%= form.text_field :email, :class=>'form-control'%>
    </div>
    <div class="form-group col-12">
        <%= form.label :name, :class=>'form-control'%>
        <%= form.text_field :name, :class=>'form-control'%>
    </div>

    <div class="form-group col-12">
        <%= form.label :password, :class=>'form-control'%>
        <%= form.text_field :password, :class=>'form-control'%>
    </div>

    <div class="form-group col-12">
        <%= form.submit%>
    </div>
</div>
<%end%>
</div>